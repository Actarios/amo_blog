<section class="full light-blue lighten-5">
    <div class="container">
        <h3 class="title center teal-text text-darken-2">
            Авторизация
        </h3>
         <div class="row">
            <form method="POST" action="/login" class="col s12">
            <div class="row">
                <div class="input-field col s12">
                <input placeholder="Логин" id="username" type="text" class="validate" name="username">
                <label for="username">Логин</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12">
                <input id="password" type="password" class="validate" name="password">
                <label for="password">Пароль</label>
                </div>
            </div>
            <button type="submit" class="btn">Войти</button>
            </form>
        </div>
    </div>
</section>